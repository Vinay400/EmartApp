<%- include('partials/header')%>
<main class="form-signin w-100 m-auto">
  <img
    style="position: absolute; left: 48%; bottom: 75%"
    class="mb-4 logo"
    src="/images/app_logo-removebg-preview.png"
    alt=""
    width="90"
    height="70"
  />
  <h1 class="h3 mb-3 fw-normal logo text-align"><%= title %></h1>
  <hr />
  <form id="authForm" method="post" action="/signin">
    <div class="form-floating">
      <input
        type="email"
        class="form-control"
        id="floatingInput"
        placeholder="name@example.com"
        name="email"
      />
      <label for="floatingInput" class="label-text">Email address</label>
    </div>
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        id="floatingPassword"
        placeholder="Password"
        name="password"
      />
      <label for="floatingPassword" class="label-text">Password</label>
    </div>

    <div class="form-check text-start my-3">
      <input
        class="form-check-input form-control"
        type="checkbox"
        value="remember-me"
        id="flexCheckDefault"
      />
      <label
        class="form-check-label label-text"
        for="flexCheckDefault"
        style="color: black"
      >
        Remember me
      </label>
    </div>
    <div>
      <button
        style="border-radius: 40px; margin-right: 20px"
        class="btn-2 btn-primary w-100 py-2"
        type="submit"
      >
        Sign in
      </button>
    </div>
  </form>

  <h1
    class="h3 mb-3 fw-normal text-align"
    style="margin-left: 45%; margin-top: 10px"
  >
    Or
  </h1>

  <button
    style="border-radius: 40px"
    class="btn-2 btn-primary w-100 py-2"
    onclick="window.location.href='/register'"
  >
    Register
  </button>
  <hr />
  <p
    style="position: absolute; vertical-align: bottom; bottom: 0%"
    class="mt-5 mb-3 text-body-secondary"
  >
    Â© 2017-2024
  </p>
</main>
<link href="css/sign-in.css" rel="stylesheet" />
<link rel="stylesheet" href="css/styles.css" />
<%- include('partials/footer')%>
